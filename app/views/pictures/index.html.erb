<p id="notice"><%= notice %></p>

<h1>画像一覧</h1>

<div class="container-fluid">
  <div class="row">
  <% @pictures.each do |picture| %>
    <table class="col-md-2">
      <tr>
        <td colspan="3" class="uploadimage"><%= image_tag picture.image %></td>
      </tr>
      <tr>
        <td><a href="/pictures/<%= picture.id %>"><span class="glyphicon glyphicon-eye-open" aria-hidden="true">詳細</span></a></td>
        <td><a href="/pictures/<%= picture.id %>/edit"><span class="glyphicon glyphicon-refresh" aria-hidden="true">変更</span></a></td>
        <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/pictures/<%= picture.id %>"><span class="glyphicon glyphicon-trash" aria-hidden="true">削除</span></a></td>
      </tr>
    </table>
  <% end %>
  </div>
</div>

<br>

<%= link_to 'New Picture', new_picture_path %>
